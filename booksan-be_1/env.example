# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/booksan_db"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-very-long-and-secure-jwt-secret-key-here-minimum-32-characters"
JWT_EXPIRES_IN="30d"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# OAuth Providers (Optional - only configure if you want to use OAuth)
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# Zalo OAuth
ZALO_APP_ID="your-zalo-app-id"
ZALO_APP_SECRET="your-zalo-app-secret"

# Elasticsearch Configuration
ELASTICSEARCH_URL="http://localhost:9200"
# ELASTICSEARCH_USERNAME="elastic"  # Optional - for secured ES
# ELASTICSEARCH_PASSWORD="password"  # Optional - for secured ES
